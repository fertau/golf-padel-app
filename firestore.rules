rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function groupExists(groupId) {
      return exists(/databases/$(database)/documents/groups/$(groupId));
    }

    function groupData(groupId) {
      return get(/databases/$(database)/documents/groups/$(groupId)).data;
    }

    function isActiveGroup(groupId) {
      return groupExists(groupId) && groupData(groupId).isDeleted != true;
    }

    function isGroupMember(groupId) {
      return isSignedIn() &&
        isActiveGroup(groupId) &&
        (
          groupData(groupId).ownerAuthUid == request.auth.uid ||
          (
            ("adminAuthUids" in groupData(groupId)) &&
            request.auth.uid in groupData(groupId).adminAuthUids
          ) ||
          (
            ("memberAuthUids" in groupData(groupId)) &&
            request.auth.uid in groupData(groupId).memberAuthUids
          )
        );
    }

    function isGroupAdmin(groupId) {
      return isSignedIn() &&
        isActiveGroup(groupId) &&
        (
          groupData(groupId).ownerAuthUid == request.auth.uid ||
          (
            ("adminAuthUids" in groupData(groupId)) &&
            request.auth.uid in groupData(groupId).adminAuthUids
          )
        );
    }

    function canReadReservation(data) {
      return isSignedIn() && (
        isReservationCreator(data) ||
        (("guestAccessUids" in data) && request.auth.uid in data.guestAccessUids) ||
        (
          isGroupScopedReservation(data) &&
          isGroupMember(data.groupId)
        )
      );
    }

    function isReservationCreator(data) {
      return data.createdByAuthUid == request.auth.uid ||
        (
          ("createdBy" in data) &&
          data.createdBy.id == request.auth.uid
        );
    }

    function reservationScope(data) {
      return ("visibilityScope" in data)
        ? data.visibilityScope
        : (
          ("groupId" in data) &&
          data.groupId != null &&
          data.groupId != "default-group"
            ? "group"
            : "link_only"
        );
    }

    function isGroupScopedReservation(data) {
      return reservationScope(data) == "group" &&
        ("groupId" in data) &&
        data.groupId != null &&
        data.groupId != "default-group";
    }

    function isReservationManager(data) {
      return isSignedIn() && (
        isReservationCreator(data) ||
        (isGroupScopedReservation(data) && isGroupAdmin(data.groupId))
      );
    }

    function isValidReservationTarget(data) {
      return (
        (
          isGroupScopedReservation(data) &&
          isGroupMember(data.groupId)
        ) ||
        (
          reservationScope(data) == "link_only" &&
          (
            !("groupId" in data) ||
            data.groupId == null ||
            data.groupId == "default-group"
          )
        )
      );
    }

    function reservationExists(reservationId) {
      return exists(/databases/$(database)/documents/reservations/$(reservationId));
    }

    function reservationData(reservationId) {
      return get(/databases/$(database)/documents/reservations/$(reservationId)).data;
    }

    function reservationMetaUnchanged() {
      return (
        request.resource.data.courtName == resource.data.courtName &&
        request.resource.data.courtId == resource.data.courtId &&
        request.resource.data.venueId == resource.data.venueId &&
        request.resource.data.venueName == resource.data.venueName &&
        request.resource.data.venueAddress == resource.data.venueAddress &&
        request.resource.data.groupId == resource.data.groupId &&
        request.resource.data.groupName == resource.data.groupName &&
        request.resource.data.visibilityScope == resource.data.visibilityScope &&
        request.resource.data.startDateTime == resource.data.startDateTime &&
        request.resource.data.durationMinutes == resource.data.durationMinutes &&
        request.resource.data.createdBy == resource.data.createdBy &&
        request.resource.data.rules == resource.data.rules &&
        request.resource.data.status == resource.data.status &&
        request.resource.data.createdAt == resource.data.createdAt &&
        request.resource.data.guestAccessUids == resource.data.guestAccessUids
      );
    }

    function playerAllowedKeys(data) {
      return data.keys().hasOnly([
        'id',
        'ownerId',
        'name',
        'usernameNormalized',
        'avatar',
        'createdAt',
        'updatedAt',
        'isPinned',
        'visibility',
        'isAdmin',
        'stats',
        'derivedStats',
        'friends',
        'friendRequests',
        'sentRequests',
        'pinHash',
        'pinSalt',
        'pinIterations',
        'pinAlgorithm'
      ]);
    }

    match /groups/{groupId} {
      allow read: if isSignedIn() && resource.data.isDeleted != true && isGroupMember(groupId);

      allow create: if isSignedIn() &&
        request.resource.data.ownerAuthUid == request.auth.uid &&
        request.auth.uid in request.resource.data.memberAuthUids &&
        request.auth.uid in request.resource.data.adminAuthUids;

      allow update: if isGroupAdmin(groupId) &&
        resource.data.isDeleted != true &&
        request.resource.data.ownerAuthUid == resource.data.ownerAuthUid;
      allow delete: if false;
    }

    match /venues/{venueId} {
      allow read: if isSignedIn();
      allow create, update: if isSignedIn() && request.resource.data.createdByAuthUid == request.auth.uid;
      allow delete: if false;
    }

    match /courts/{courtId} {
      allow read: if isSignedIn();
      allow create, update: if isSignedIn() && request.resource.data.createdByAuthUid == request.auth.uid;
      allow delete: if false;
    }

    match /groupInvites/{token} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() &&
        request.resource.data.createdByAuthUid == request.auth.uid &&
        isGroupAdmin(request.resource.data.groupId);
      allow update: if false;
      allow delete: if false;
    }

    match /reservationInvites/{token} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() &&
        request.resource.data.createdByAuthUid == request.auth.uid &&
        reservationExists(request.resource.data.reservationId) &&
        request.resource.data.groupId == reservationData(request.resource.data.reservationId).groupId &&
        (
          reservationData(request.resource.data.reservationId).createdByAuthUid == request.auth.uid ||
          isGroupAdmin(request.resource.data.groupId)
        );
      allow update: if false;
      allow delete: if false;
    }

    match /reservations/{reservationId} {
      allow read: if canReadReservation(resource.data);

      allow create: if isSignedIn() &&
        request.resource.data.createdByAuthUid == request.auth.uid &&
        isValidReservationTarget(request.resource.data);

      allow update: if isSignedIn() &&
        request.resource.data.createdByAuthUid == resource.data.createdByAuthUid &&
        (
          (isReservationManager(resource.data) && isValidReservationTarget(request.resource.data)) ||
          (
            canReadReservation(resource.data) &&
            reservationMetaUnchanged()
          )
        );

      allow delete: if false;
    }

    match /players/{playerId} {
      allow read: if isSignedIn() && playerId == request.auth.token.playerId;

      allow create: if false;

      allow update: if isSignedIn() &&
        playerId == request.auth.token.playerId &&
        resource.data.ownerId == request.auth.uid &&
        request.resource.data.ownerId == resource.data.ownerId &&
        request.resource.data.id == resource.data.id &&
        playerAllowedKeys(request.resource.data);

      allow delete: if false;
    }

    match /playerDirectory/{playerId} {
      allow read: if false;
      allow write: if false;
    }

    match /usernames/{usernameNormalized} {
      allow read: if false;
      allow write: if false;
    }
  }
}
